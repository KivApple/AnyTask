<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/noteCardMargin"
	android:padding="@dimen/noteCardPadding"
	app:cardCornerRadius="@dimen/noteCardCornerRadius"
	app:cardElevation="@dimen/noteCardElevation"
	android:foreground="?attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="true"
	android:background="?attr/normalBackgroundColor">
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<ImageView
			android:id="@+id/note_folder_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:contentDescription="@string/folders"
			app:srcCompat="@drawable/ic_folder_black_24dp" />
		
		<TextView
			android:id="@+id/note_folder_title_text_view"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@id/note_folder_icon"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginStart="4dp"
			android:layout_marginLeft="4dp"
			android:textColor="?attr/textColorPrimary"
			android:text="@string/folders" />
	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
